<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atanasvasil.mobile.mycardocs">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_new_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyCarDocs"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.policies.PolicyActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.policies.PolicyUpdateActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.policies.PolicyCreateActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.cars.CarUpdateActivity"
            android:parentActivityName=".activities.cars.CarActivity" />
        <activity
            android:name=".activities.cars.CarActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.cars.CarCreateActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.StartupActivity"
            android:theme="@style/MyCarDocs.ThemeNo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/Theme.MyCarDocs.NoActionBar" />
        <activity
            android:name=".activities.RegisterActivity"
            android:parentActivityName=".activities.LoginActivity" />
        <activity android:name=".activities.LoginActivity" />
    </application>

</manifest>