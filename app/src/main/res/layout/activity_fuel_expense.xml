        <TableLayout
            android:id="@+id/fuelExpenseSummaryTable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@id/fuelExpenseGuideRight"
            app:layout_constraintStart_toStartOf="@id/fuelExpenseGuideLeft"
            app:layout_constraintTop_toBottomOf="@+id/fuelExpenseDiscountET">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:fontFamily="@font/nunito"
                    android:text="@string/fuel_expense_price_per_litre"
                    android:textAlignment="textEnd" />

