<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/feiCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:id="@+id/feiDateContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/feiGuideLeft"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/feiDateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:textAlignment="center"
                    android:textColor="@color/soft_black"
                    android:textStyle="bold"
                    tools:text="5" />

                <TextView
                    android:id="@+id/feiMonthTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:textAlignment="center"
                    tools:text="APR" />

                <TextView
                    android:id="@+id/feiYearTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    tools:text="21" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_gas_station"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/feiDateContainer"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/danger" />

            <!--    <TextView-->
            <!--        android:id="@+id/feiCarTV"-->
            <!--        android:layout_width="wrap_content"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:fontFamily="@font/nunito"-->
            <!--        android:text="@string/fuel_expense_title"-->
            <!--        android:visibility="gone"-->
            <!--        app:layout_constraintEnd_toStartOf="@+id/feiContentContainer"-->
            <!--        app:layout_constraintStart_toEndOf="@+id/imageView"-->
            <!--        app:layout_constraintTop_toTopOf="@+id/feiContentContainer" />-->

            <LinearLayout
                android:id="@+id/feiContentContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/feiGuideRight"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/feiCarTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    app:layout_constraintEnd_toStartOf="@+id/feiGuideRight"
                    app:layout_constraintTop_toTopOf="@+id/imageView"
                    tools:text="Car license plate" />

                <TextView
                    android:id="@+id/feiTotalTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:textColor="@color/soft_black"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/feiGuideRight"
                    app:layout_constraintTop_toBottomOf="@+id/feiDescriptionTV"
                    tools:text="21.00" />

            </LinearLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/feiGuideLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/feiGuideRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>